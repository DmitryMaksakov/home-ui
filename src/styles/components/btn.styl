.btn {
  outline: none !important;

  &.btn-default {
    background-color: #fff;
    border-color: #ddd;

    &.btn--selected {
      background-color: #eaeaea;
      border-color: #cacaca;
    }

    &:active,
    &:hover {
      background-color: #eee;
      border-color: #ccc;
    }

    &:active,
    &:hover {
      box-shadow: none;
    }
  }

  &.btn--icon {
    display: inline-flex;
    justify-content: center;
    align-items: center;

    .fa {
      font-size: 20px;
      color: #777;
    }
  }
}
